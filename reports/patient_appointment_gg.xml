<odoo>
    <template id="report_patient_appointment_template">
        <t t-call="web.html_container">
            <!-- The t-call to basic_layout is now outside the loop -->
            <t t-call="web.basic_layout">
                <!-- The t-foreach loop is moved inside the main page structure -->
                <t t-foreach="docs" t-as="o">
                    <!--
                        A wrapper div for each appointment.
                        'page-break-after: always;' ensures each appointment starts on a new page.
                    -->
                    <div class="page" style="page-break-after: always;">
                        <!-- Report Header -->
                        <div class="row">
                            <div class="col-xs-6">
                                <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)" style="max-height: 45px;" alt="Logo"/>
                            </div>
                            <div class="col-xs-6 text-right">
                                <h2>Appointment</h2>
                                <p>
                                    <strong>Reference:</strong>
                                    <span t-field="o.ref"/>
                                </p>
                            </div>
                        </div>

                        <!-- Patient and Appointment Details -->
                        <div class="row mt32">
                            <div class="col-xs-6">
                                <h4><strong>Patient:</strong> <span t-field="o.patient_id.name"/></h4>
                                <p>
                                    <strong>Booking Date:</strong> <span t-field="o.booking_date"/><br/>
                                    <strong>Appointment Time:</strong> <span t-field="o.appointment_time"/>
                                </p>
                            </div>
                            <div class="col-xs-6 text-right">
                                <h4><strong>Doctor:</strong> <span t-field="o.doctor_id.name"/></h4>
                                <p>
                                    <strong>Status:</strong>
                                    <span t-if="o.state == 'draft'" class="badge badge-info">Draft</span>
                                    <span t-if="o.state == 'in_consultation'" class="badge badge-warning">In Consultation</span>
                                    <span t-if="o.state == 'done'" class="badge badge-success">Done</span>
                                    <span t-if="o.state == 'cancel'" class="badge badge-danger">Cancelled</span>
                                </p>
                            </div>
                        </div>

                        <hr/>

                        <!-- Prescription Section -->
                        <div class="row" t-if="o.prescription">
                            <div class="col-xs-12">
                                <h4>Prescription</h4>
                                <div style="border: 1px solid #ddd; padding: 10px; border-radius: 5px; background-color: #f9f9f9;">
                                    <p t-field="o.prescription"/>
                                </div>
                            </div>
                        </div>

                        <!-- Pharmacy Lines Section -->
                        <div class="row mt32" t-if="o.appointment_pharmacy_lines_ids">
                            <div class="col-xs-12">
                                <h4>Pharmacy</h4>
                                <table class="table table-condensed">
                                    <thead>
                                        <tr>
                                            <th>Product</th>
                                            <th class="text-right">Quantity</th>
                                            <th class="text-right" t-if="not o.hide_sales_price">Unit Price</th>
                                            <th class="text-right" t-if="not o.hide_sales_price">Subtotal</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr t-foreach="o.appointment_pharmacy_lines_ids" t-as="line">
                                            <td><span t-field="line.product_id.name"/></td>
                                            <td class="text-right"><span t-field="line.qty"/></td>
                                            <td class="text-right" t-if="not o.hide_sales_price">
                                                <span t-field="line.price_unit" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                            </td>
                                            <td class="text-right" t-if="not o.hide_sales_price">
                                                <span t-field="line.price_subtotal" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <!-- Totals Section -->
                        <div class="row" t-if="o.appointment_pharmacy_lines_ids and not o.hide_sales_price">
                            <div class="col-xs-4 col-xs-offset-8">
                                <table class="table table-condensed">
                                    <tr class="border-black">
                                        <td><strong>Total</strong></td>
                                        <td class="text-right">
                                            <span t-field="o.amount_total" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
