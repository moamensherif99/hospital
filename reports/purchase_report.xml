        <xpath expr="//table[@class='table table-sm o_main_table table-borderless mt-4']" position="inside">
            <thead style="display: table-row-group">
                <tr>
                    <th name="th_discount"><strong>discount</strong></th>
                </tr>
            </thead>
            <tbody>
                <t t-foreach="docs" t-as="o">
                    <td><t t-esc="o.order_line[0].discount"/>%</td>
                </t>
            </tbody>

        </xpath>
        <xpath expr="//table[@class='table table-sm o_main_table table-borderless mt-4']" position="after">
            <t t-foreach="docs" t-as="o">
                <strong>
                    Discount: <t t-esc="o.order_line[0].discount"/>%
                </strong>
