<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="appointment_report_form_view" model="ir.ui.view">
        <field name="name">appointment report form</field>
        <field name="model">appointment.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="patient_id"/>
                    </group>
                    <group>
                        <field name="start_date"/>
                        <field name="end_date"/>
                    </group>
                    <footer>
                        <button string="Print Pdf" type="object" name="action_generate_report" class="btn-primary"/>
                        <button string="Print Excel" type="object" name="action_generate_xls_report" class="btn-primary"/>
                        <button string="Cancel" special="cancel" class="btn-secondary"/>
                    </footer>
                </group>
            </form>
        </field>
    </record>

    <record id="appointment_report_action" model="ir.actions.act_window">
        <field name="name">Appointment Report</field>
        <field name="res_model">appointment.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>