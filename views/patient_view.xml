<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="patient_tree_view" model="ir.ui.view">
        <field name="name">patient tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <list export_xlsx="0" sample="1" multi_edit="1" create="1" edit="1" delete="1" default_order="create_date desc">
                <field name="name" string="Patient Name"/>
                <field name="create_date" string="Create Date"/>
                <field name="ref"/>
                <field name="age" avg="Average Age"/>
                <field name="appointment_count" sum="Total Appointments"/>
                <field name="gender"/>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
            </list>
        </field>
    </record>
    <record id="patient_form_view" model="ir.ui.view">
        <field name="name">patient form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div name="button_box" class="oe_button_box">
                        <button name="action_view_appointments" type="object" icon="fa-star">
                            <field name="appointment_count" widget="statinfo" string="Appointment"/>
                        </button>
                    </div>
                    <div class="alert alert-info text-center o_form_header" role="alert" style="position: relative;"
                         invisible="is_birth_date == False">
                        <a class="close" data-bs-dismiss="alert" href="#"
                           style="position: absolute; top: 8px; right: 8px;">X
                        </a>
                        <strong>Today is birthday</strong>
                        <div>
                            wish
                            <field name="name" readonly="1"/>
                            a happy birthday
                        </div>
                    </div>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <label for="ref" class="oe_edit_only"/>
                        <h4>
                            <field name="ref" force_save="1"/>
                            <!--                            when u make a field readonly, it will not be saved and using on_change will not work so use-->
                            <!--                            force_save="1" to save the value-->
                        </h4>
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date_of_birth"/>
                            <field name="age"/>
                            <field name="appointment_id"/>
                            <field name="appointment_count"/>
                        </group>
                        <group>
                            <field name="gender" widget="radio"/>
                            <field name="male_power" invisible="gender != 'male'" required="gender == 'male'"/>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            <field name="tag_ids" widget="many2many_checkboxes" options="{'color_field': 'color'}"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                    <group string="Other Information" name="other_info">
                        <group>
                            <field name="parent" invisible="age &gt;= 15 or gender == 'male'"/>
                            <!--                            <field name="parent" invisible="['|', ('age', '>', 15), ('gender', '=', 'female')]"/>-->
                            <field name="marital_status"/>
                            <field name="partner_name" readonly="marital_status != 'married'"
                                   required="marital_status == 'married'"/>
                        </group>
                        <group>
                            <field name="phone" widget="phone"/>
                            <field name="email" widget="email"/>
                            <field name="website" widget="url"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
    <record id="patient_search_view" model="ir.ui.view">
        <field name="name">patient search</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <search>
                <field name="ref"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="name"/>

                <filter name="is_male" string="Male" domain="[('gender','=','male')]"/>
                <filter name="is_female" string="Female" domain="[('gender','=','female')]"/>
                <separator/>
                <filter name="is_kid" string="Kid" domain="[('age','&lt;=',6)]"/>

                <filter name="gender_group" string="Gender" context="{'group_by':'gender'}"/>
                <searchpanel>
                    <field name="gender" icon="fa-users" select="multi" enable_counters="1"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="patient_action" model="ir.actions.act_window">
        <field name="name">Patient</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_is_male':1, 'search_default_gender_group':1}</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Your First Patient
            </p>
        </field>
    </record>
</odoo>